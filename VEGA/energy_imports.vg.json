{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { 
    "text": {"expr": "'Imports of Energy Types ' + '('  + SelectedYear + ')'"},
    "fontSize": 40 
  },
  "width": 300,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/YoMoM829/FIT3179-/refs/heads/main/DATA/energy_imports.csv"
  },
  "params": [
    {
      "name": "SelectedYear",
      "value": 2020, 
      "bind": {
        "input": "range",
        "min": 1983,
        "max": 2022,
        "name": "Select Year",
        "step": 1
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Time == SelectedYear" 
    },
    {
      "fold": ["Oil", "Refined Petroleum Products", "Gas", "Coal"],
      "as": ["FuelType", "Energy"]
    }
  ],
  "mark": {
    "type": "arc",
    "stroke": "black",
    "strokeWidth": 2,
    "tooltip": true
  },
  "encoding": {
    "theta": {
      "field": "Energy",
      "type": "quantitative",
      "title": "Energy (PJ)"
    },
    "color": {
      "field": "FuelType",
      "type": "nominal",
      "title": "Fuel Type",
      "legend": {
        "titleFontSize": 20,
        "labelFontSize": 18,
        "titleFont": "Arial",
        "labelFont": "Arial"
      }
    },
    "tooltip": [
      {"field": "FuelType", "type": "nominal", "title": "Fuel Type"},
      {"field": "Energy", "type": "quantitative", "title": "Energy (PJ)"}
    ]
  }
}
