{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Energy Usage by Type across Australian States",
      "fontSize": 40
    },
    "width": 1250,
    "height": 900,
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/YoMoM829/FIT3179-/refs/heads/main/VEGA/ne_10m_admin_0_countries.json",
          "format": {
            "type": "topojson", 
            "feature": "ne_10m_admin_0_countries"
          } 
        },
        "mark": {
          "type": "geoshape",
          "stroke": "black"
        }
      },
      {
        "data": {"url": "DATA/energy_percentage_map.csv"},
        "transform": [
          {
            "fold": ["Coal", "Renewables", "Gas", "Oil"],
            "as": ["energy_type", "percentage"]
          }
        ],
        "mark": "circle",
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "color": {
            "field": "energy_type",
            "type": "nominal",
            "scale": {
              "domain": ["Coal", "Renewables", "Gas", "Oil"],
              "range": ["#ff5733", "#28b463", "#3498db", "#f1c40f"]
            },
            "title": "Energy Type",
            "legend": {
              "titleFontSize": 20,
              "labelFontSize": 18,
              "titleFont": "Arial",
              "labelFont": "Arial"
            }
          },
          "size": {
            "field": "percentage",
            "type": "quantitative",
            "title": "Percentage",
            "scale": {"range": [0, 1000]},
            "legend": {
              "titleFontSize": 20,
              "labelFontSize": 18,
              "titleFont": "Arial",
              "labelFont": "Arial"
            }
          },
          "tooltip": [
            {"field": "States", "type": "nominal", "title": "State"},
            {"field": "energy_type", "type": "nominal", "title": "Energy Type"},
            {"field": "percentage", "type": "quantitative", "title": "Percentage"}
          ]
        }
      }
    ]
  }
  