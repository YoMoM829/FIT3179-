{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Energy Usage by Type across Australian States",
      "fontSize": 40
    },
    "width": 600,
    "height": 400,
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/YoMoM829/FIT3179-/refs/heads/main/VEGA/map.json",
          "format": {
            "type": "topojson", 
            "feature": "ne_10m_admin_0_countries"
          } 
        },
        "mark": {
          "type": "geoshape",
          "stroke": "black"
        }
      },
      {
        "data": {"url": "DATA/energy_percentage_map.csv"},
        "mark": "circle",
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "color": {
            "field": "States",
            "type": "nominal",
            "title": "State",
            "legend": {
              "titleFontSize": 20,
              "labelFontSize": 18,
              "titleFont": "Arial",
              "labelFont": "Arial"
            }
          },
          "size": {
            "field": "Coal",
            "type": "quantitative",
            "title": "Percentage",
            "scale": {"range": [0, 1000]},
            "legend": {
              "titleFontSize": 20,
              "labelFontSize": 18,
              "titleFont": "Arial",
              "labelFont": "Arial"
            }
          },
          "tooltip": [
            {"field": "States", "type": "nominal", "title": "State"},
            {"field": "Coal", "type": "quantitative", "title": "Percentage"}
          ]
        }
      }
    ]
  }