{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { 
    "text": {"expr": "'Energy Production from ' + Start + ' to ' + End"},
    "fontSize": 40,
    "font": "Arial"
  },
  "width": 800,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/YoMoM829/FIT3179-/refs/heads/main/DATA/energy_prod_fuel_type.csv"
  },
  "params": [
    {
      "name": "Start",
      "value": 1973,
      "bind": {
        "input": "range",
        "min": 1973,
        "max": 2022,
        "step": 1
      }
    },
    {
      "name": "End",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 1973,
        "max": 2022,
        "step": 1
      }
    },
    {
      "name": "FuelType",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "Coal", "Renewables", "Gas", "Oil"]
      }
    }
  ],
  "transform": [
    {
      "fold": ["Coal", "Renewables", "Gas", "Oil"],
      "as": ["FuelType", "Energy"]
    },
    {
      "filter": "datum.Time >= Start && datum.Time <= End && (FuelType === 'All' || datum.FuelType === FuelType)"
    },
    {
      "calculate": "datetime(datum.Time, 0, 1)", 
      "as": "year"
    }
  ],
  "mark": {
    "type": "line",
    "strokeWidth": 5
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "title": "Year",
      "axis": {
        "titleFontSize": 20,
        "titleFont": "Arial",
        "labelFont": "Arial",
        "labelFontSize": 18
      }
    },
    "y": {
      "field": "Energy",
      "type": "quantitative",
      "title": "Energy (PJ)",
      "axis": {
        "titleFontSize": 20,
        "titleFont": "Arial",
        "labelFontSize": 18,
        "labelFont": "Arial"
      }
    },
    "color": {
      "field": "FuelType",
      "type": "nominal",
      "title": "Fuel Type",
      "legend": {
        "titleFontSize": 20,
        "labelFontSize": 18,
        "titleFont": "Arial",
        "labelFont": "Arial"
      }
    },
    "tooltip": [
      {"field": "year", "type": "temporal", "title": "Year"},
      {"field": "FuelType", "type": "nominal", "title": "Fuel Type"},
      {"field": "Energy", "type": "quantitative", "title": "PJ"}
    ]
  }
}