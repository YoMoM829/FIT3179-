{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": {
    "text": "Magnitudes of Tsunamis",
    "fontSize": 18
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}},
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "Week 10 Homework/DATA/tsunami_dataset.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"filter": "datum.mag != null"},
        {"filter": "datum.mag > 0"},
        {"filter": "datum.month != null"},
        {"filter": "datum.day != null"},
        {
          "calculate": "toDate(datum.year + '-' + datum.month + '-' + datum.day)",
          "as": "date"
        }],
      "mark": {
        "type": "circle",
        "size": 150
      },
      "encoding": {
        "longitude": {"field": "long", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "color": {
          "field": "mag", 
          "type": "quantitative", 
          "title": "Magnitude",
          "scale": {
            "domain": [2, 4, 6, 8], 
            "range": ["#ff0000", "#bbc30f", "#0fc3b9", "#3e0fc3"]
          }
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "date", "type": "temporal", "title": "Date"},
          {"field": "mag", "type": "quantitative", "title": "Magnitude"}
        ]
      }
    }
  ]
}