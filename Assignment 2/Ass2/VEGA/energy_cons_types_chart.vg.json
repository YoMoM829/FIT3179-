{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Energy Consumption by Fuel Type" },
  "data": {
    "url": "DATA/energy_cons_fuel_type.csv"
  },
  "transform": [
    {
      "fold": ["Coal", "Renewables", "Gas", "Oil"],
      "as": ["FuelType", "Energy"]
    },
    {
      "calculate": "datetime(datum.Time, 0, 1)", 
      "as": "year"
    }
  ],
  "mark": {
    "type": "area"
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "field": "Energy",
      "type": "quantitative",
      "title": "Energy (PJ)"
    },
    "color": {
      "field": "FuelType",
      "type": "nominal",
      "title": "Fuel Type"
    }
  }
}
